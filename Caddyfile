{$DOMAIN} {
    # WebSocket para subastas en tiempo real
    handle /api/ws/* {
        reverse_proxy backend:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            transport http {
                read_timeout 24h
            }
        }
    }

    # API → Go backend
    handle /api/* {
        reverse_proxy backend:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    # Todo lo demás → Next.js
    handle {
        reverse_proxy web:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    encode gzip

    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
        }
    }
}

# Redirige www → sin www
www.{$DOMAIN} {
    redir https://{$DOMAIN}{uri} permanent
}
