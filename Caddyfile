{$DOMAIN} {
    # Imágenes de productos — Caddy las sirve directo (sin pasar por Next.js)
    # Cache de 1 año: el nombre del archivo no cambia, y si cambia se sube nuevo archivo
    handle /products/* {
        root * /srv
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }

    # WebSocket para subastas en tiempo real
    handle /api/ws/* {
        reverse_proxy backend:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            transport http {
                read_timeout 24h
            }
        }
    }

    # Next.js API routes (gestión de imágenes — NOT Go backend)
    handle /api/admin/images* {
        reverse_proxy web:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    # API → Go backend
    handle /api/* {
        reverse_proxy backend:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    # Todo lo demás → Next.js
    handle {
        reverse_proxy web:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    # HSTS: fuerza HTTPS en el browser para siempre (1 año)
    header Strict-Transport-Security "max-age=31536000; includeSubDomains"

    encode gzip

    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
        }
    }
}

# Redirige www → sin www
www.{$DOMAIN} {
    redir https://{$DOMAIN}{uri} permanent
}
